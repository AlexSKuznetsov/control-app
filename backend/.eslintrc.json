{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "node",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["import/recommend"],
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        // "js": "never",
        "mjs": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ]
  }
}
